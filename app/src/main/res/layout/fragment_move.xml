<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:text="Move of the Day"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Don't try to beat a wrist hold by pulling away from your attacker. Instead, rotate your wrist so yout thumb meets his fingers and jerk sharply by bending your arm at the elbow"
            android:id="@+id/move_of_the_day"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/txtLabel"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/move"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="    Start Learning Basics   "
            android:id="@+id/button"
            android:background="@drawable/mybutton"
            android:layout_below="@+id/move_of_the_day"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="    Learn Online   "
            android:id="@+id/button1"
            android:background="@drawable/mybutton"
            android:layout_below="@+id/button"
            android:layout_marginBottom="15dp"
            />
    </RelativeLayout>

</ScrollView>